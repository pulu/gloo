<header>
  <div class="container">
    <div id="header">
      <div class="span-3">
      <nav class="large">
        <ul>
          <li><%= link_to "Horses",   horses_path,  :class => "quiet" %></li>
          <li><%= link_to "Players",  players_path, :class => "quiet" %></li>
        </ul>
      </nav>
      </div>
      <div class="span-21 last">
      <nav align="right" class="large">
        <ul>
        <% name = current_user ? current_user.name : "Noone" %>
          <% if signed_in?  %>
          <li><%= current_user.name %></li>
          <li><%= link_to "SignOut",  signout_path, :class => "quiet" %></li>
          <% else %>
          <li><%= link_to "SignIn",   signin_path,  :class => "quiet" %></li>
          <% end %>
          <li><%= link_to "Profile",  current_user, :class => "quiet" %></li>
          <li><%= link_to "Home",     root_path,    :class => "quiet" %></li>
        </ul>
      </nav>
      </div>
      <h1 id="logo" class="span-16">
        <%= link_to logo, root_path %>
      </h1>
    </div>
    <hr />

    <div id="subheader" class="span-24 last">
      <h3 class="alt">A polo community.</h3>
    </div>
    <hr />

  </div> 
</header>
