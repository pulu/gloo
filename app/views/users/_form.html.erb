<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label t 'name' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t 'email' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t 'password' %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, t('confirmation') %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label t 'language' %><br />
    <%= f.select :language, [[t('english'), 'en'],[t('spanish'),'es']]  %>
  </div>
  <div class="actions">
    <%= f.submit t 'signup' %><br />
  </div>
<% end %>
