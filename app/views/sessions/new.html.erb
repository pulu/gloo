<h1><%= t 'signin' %></h1>

<%= form_for( :session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label t 'email' %><br />
    <%= f.text_field :email%>
  </div>
  <div class="field">
    <%= f.label t 'password' %><br />
    <%= f.text_field :password%>
  </div>
  <div class="actions">
    <%= f.submit t 'signin' %>
  </div>
<% end %>

<p><%= t('sessions.newuser') %>
<%= link_to t('sessions.signupnow'), signup_path %></p>

