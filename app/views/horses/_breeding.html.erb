<div>
  <h4 align="center"><%= t 'horses.breeding'%></h4>
  <% @sire = sire %>
  <% sire_image = image_tag @sire.photo.url(:small) %>
  <%= link_to sire_image, @sire %>
  <p><b><%= t 'horses.sire' %>: </b><%= @sire.name %><br />
  <b><%= t 'horses.bloodline' %>: </b><tab><%= sire.bloodline %></p>

  <% @dam = dam %>
  <% dam_image = image_tag @dam.photo.url(:small) %>
  <%= link_to dam_image, @dam %>
  <p><b><%= t 'horses.dam' %>: </b><%= @dam.name %> <br />
  <b><%= t 'horses.bloodline' %>: </b><tab><%= dam.bloodline %><p>

  <hr>
  <h5 align="center"><%= t 'horses.children' %></h5>
  <% @list = children %>
  <% @males = males @list %>
  <% @females = males @list, false %>
  <% @males.each do |child| %>
    <%= link_to child.name, child, :class => 'quiet' %>
    <%= child.gender %><br \>
  <% end %>
  <br \>
  <% @females.each do |child| %>
    <%= link_to child.name, child, :class => 'quiet' %>
    <%= child.gender %><br \>
  <% end %>
  <p></p>

  <hr>
  <h5 align="center"><%= t 'horses.grandchildren' %></h5>
  <% @list = grandchildren %>
  <% @males = males @list %>
  <% @females = males @list, false %>
  <% @males.each do |child| %>
    <%= link_to child.name, child, :class => 'quiet' %>
    <%= child.gender %><br \>
  <% end %>
  <br \>
  <% @females.each do |child| %>
    <%= link_to child.name, child, :class => 'quiet' %>
    <%= child.gender %><br \>
  <% end %>
  <p></p>

</div>

